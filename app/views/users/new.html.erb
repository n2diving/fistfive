<div class="row">
  <div class="col-xs-10 col-sm-4 col-xs-offset-3 col-sm-offset-4">
    <div class='form-container'>
      <h1>sign up</h1>

      <%= form_for @user do |f| %>

       <div class="form-group">
          <%= f.text_field :name, placeholder:"Name goes here...", autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.text_field :email, placeholder:"Email goes here..." %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, placeholder:"Password goes here..." %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, placeholder:"confirm password..." %>
        </div>

        <div class="form-group">
          <%= select_tag "form_tag", options_for_select(["Student", "Instructor"]), class: "selectpicker" %>
        </div>

        <div class="form-group">
          <%= f.submit "sign me up!" %>
        </div>
      </div>

      <% end %>
  </div><!--end of col-->
</div><!--end of row-->