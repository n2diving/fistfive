<div class="container-fluid">

<div class="row">
  <div class="col-xs-8 col-sm-6 col-xs-offset-1 col-sm-offset-3 col-md-6 col-md-offset-2">
    <div class='form-container'>
      <div class="form-horizontal">

        <fieldset>
          <legend>Instructor Sign Up</legend>

          <%= form_for @user do |f| %>

          <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Instructor Name</label>  
            <div class="col-md-8">
              <%= f.text_field :name, placeholder:"Name", autofocus: true, class: "form-control input-md" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Email</label>  
            <div class="col-md-8">
              <%= f.text_field :email, placeholder:"Email", class: "form-control input-md" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Password</label>  
            <div class="col-md-8">
              <%= f.password_field :password, placeholder:"Password", class: "form-control input-md" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Confirm Password</label>  
            <div class="col-md-8">
              <%= f.password_field :password_confirmation, placeholder:"Confirm Password", class: "form-control input-md" %>
            </div>
          </div>
          
            <!-- Designates user type -->
            <%= f.hidden_field( :type, value: "Instructor" ) %>

            <!-- Button (Double) -->
            <div class="form-group">
              <div class="col-md-4 control-label" for="button1id"></div>
              <div class="col-md-8">
                <%= f.submit "Instructor Sign Up", class: 'btn btn-info' %>
                <%= link_to "Not a Instructor?", new_student_path, class: 'btn btn-primary pull-right' %>
              </div>
            </div>
          
          </fieldset>
        </div><!--end form horizontal-->
      </div><!--end form container-->

      <% end %>
  </div><!--end of col-->
</div><!--end of row-->
</div><!-- end of fluid container-->