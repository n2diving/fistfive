<div id="loginModal" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="loginModal">Log In</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <%= form_for @user, {url:session_path} do |f| %>

            <div class="form-group input-group">
              <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
              <%= f.text_field :email, placeholder:"Email goes here...", class: 'form-control', required: true, autofocus: true %>
            </div>

            <div class="form-group input-group">
              <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
              <%= f.password_field :password, placeholder:"Password goes here...", class: 'form-control', required: true %>
            </div>

            <div class="btn-toolbar">
                <%= f.submit "Log in!", class: 'btn btn-primary btn-large' %>
                <%= link_to "Sign up!", new_user_path, class: 'btn btn-primary pull-right', style: 'background-color:#1A91E0' %>
            </div>

            <% end %>
          </div>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
  $('#loginModal').modal('show');
</script>
