<div class="container-fluid">

<div class="row">
  <div class="col-xs-10 col-sm-4 col-xs-offset-3 col-sm-offset-4">
    <div class='form-container'>
      <h1>sign up</h1>

      <%= form_for @user do |f| %>

       <div class="form-group">
          <%= f.text_field :name, placeholder:"Student Name", autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.text_field :email, placeholder:"Email" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, placeholder:"Password" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, placeholder:"Confirm Password" %>
        </div>
        <!-- Designates user type -->
        <%= f.hidden_field( :type, value: "Student" ) %>

        <div class="form-group">
          <%= f.submit "Sign Me Up!" %>
        </div>
      </div>

      <% end %>
  </div><!--end of col-->
</div><!--end of row-->
</div><!-- end of fluid container-->