<div class="container-fluid">

<h1>Students Home Page</h1>

<table class="table table-striped table-hover">
	<tr>
		<td>Lesson Name</td>
		<td>Instructor</td>
		<td>Date</td>
	</tr>
	<% @lessons.each do |l| %>
	<tr>
		<td><%= link_to l.name, lesson_path(l.id) %></td>
		<td><%= l.instructor.name %></td>
		<td><%= l.created_at.strftime("%m/%d/%Y") %></td>
	</tr>
	<% end %>

</table>

</div>